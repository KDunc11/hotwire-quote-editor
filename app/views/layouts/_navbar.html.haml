%header.navbar
  - if user_signed_in?
    .navbar__brand
      = current_company.name
    .navbar__name
      = current_user.name
    = button_to "Sign out",
      destroy_user_session_path,
      method: :delete,
      class: "btn btn--dark"
  - else
    .navbar__right
      = link_to "Sign in",
        new_user_session_path,
        class: "btn btn--dark-ghost navbar__right"
      = link_to "Sign up",
        new_user_registration_path,
        class: "btn btn--primary navbar__right"
